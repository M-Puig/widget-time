<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Header with navigation, station name, page indicator and refresh button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left arrow (previous stop) -->
        <ImageButton
            android:id="@+id/widget_prev_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_left"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:contentDescription="@string/previous_stop" />

        <TextView
            android:id="@+id/widget_station_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Station Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="start" />

        <!-- Page indicator dots (inline with station name) -->
        <TextView
            android:id="@+id/widget_page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:textSize="10sp"
            android:textColor="@color/widget_text_secondary"
            android:visibility="gone" />

        <!-- Right arrow (next stop) -->
        <ImageButton
            android:id="@+id/widget_next_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:contentDescription="@string/next_stop" />

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_refresh"
            android:background="@android:color/transparent"
            android:contentDescription="@string/refresh" />

    </LinearLayout>

    <!-- Divider -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/widget_divider" />

    <!-- Next tram info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_next_tram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T1 - Central Station"
            android:textSize="13sp"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 min"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/widget_accent" />

    </LinearLayout>

    <!-- Second tram info (optional) -->
    <TextView
        android:id="@+id/widget_next_tram_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="T2 - 8 min"
        android:textSize="12sp"
        android:textColor="@color/widget_text_secondary"
        android:maxLines="1"
        android:ellipsize="end" />

</LinearLayout>
